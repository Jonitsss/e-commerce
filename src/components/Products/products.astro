---
import PhoneData from '../../content/phones.json'
import Card2 from './productsCard.astro'
---
<div>
    <h2 class=" text-2xl text-center mb-12 text-blue-700 font-semibold tracking-wide uppercase">Nuestros Productos</h2>
    <div class="holder mx-auto w-10/12 grid sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-4 justify-center gap-4">
        <!--Menu de Filtros -->
        <div class="bg-gray-100 p-4 col-span-1 sm:col-span-1">
            <h2>Filtar Productos</h2>
            <div>
                <h3>Celular</h3>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Iphone 8</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Iphone X </label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Iphone 11</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Iphone 11</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Iphone 12</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Iphone 13</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Iphone 14</label>
                </div>
            </div>
            <div>
                <h3>Color</h3>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Gold Rose</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Black</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">White</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Yellow</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Green</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Red</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">Blue</label>
                </div>
            </div>
            <div>
                <h3>Condicion</h3>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">100%</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">90%</label>
                </div>
                <div>
                    <input type="checkbox" name="" id="">
                    <label for="">80%</label>
                </div>
            </div>

            
            
        </div>
        <div class="col-span-1 sm:col-span-3">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 ">
                {PhoneData.phones.map(phone =>(<Card2 phones={phone} />))}
            </div>
        </div>
    </div>
</div>
